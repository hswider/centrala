# ==================================================
# Centrala POOM - Zmienne srodowiskowe
# ==================================================
# Skopiuj ten plik jako .env.local i uzupelnij wartosci
# ==================================================

# ---- Apilo API ----
APILO_BASE_URL=https://poom.apilo.com
APILO_CLIENT_ID=4
APILO_CLIENT_SECRET=twoj_client_secret

# ---- Vercel Postgres ----
# Pobierz te wartosci z Vercel Dashboard -> Project -> Settings -> Environment Variables
# lub uzyj: vercel env pull .env.local
POSTGRES_URL=postgres://default:xxxxx@ep-xxxxx.eu-central-1.aws.neon.tech:5432/verceldb?sslmode=require
POSTGRES_PRISMA_URL=postgres://default:xxxxx@ep-xxxxx.eu-central-1.aws.neon.tech:5432/verceldb?sslmode=require&pgbouncer=true&connect_timeout=15
POSTGRES_URL_NO_SSL=postgres://default:xxxxx@ep-xxxxx.eu-central-1.aws.neon.tech:5432/verceldb
POSTGRES_URL_NON_POOLING=postgres://default:xxxxx@ep-xxxxx.eu-central-1.aws.neon.tech:5432/verceldb?sslmode=require
POSTGRES_USER=default
POSTGRES_HOST=ep-xxxxx.eu-central-1.aws.neon.tech
POSTGRES_PASSWORD=xxxxx
POSTGRES_DATABASE=verceldb

# ---- Auth (opcjonalne) ----
# Haslo do logowania w aplikacji
AUTH_PASSWORD=twoje_haslo

# ---- Cron (opcjonalne) ----
CRON_SECRET=twoj_cron_secret
